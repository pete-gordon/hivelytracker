# "Yes" if you want a different tab background behind
# the tab label text, "No" for ordinary (defaults to No if omitted)
tabtextback = 'Yes'

# "Yes" if you want shadows behind tab label text
# "No" if you don't (defaults to Yes if omitted)
tabtextshad = 'No'

